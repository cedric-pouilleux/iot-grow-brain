{
  "name": "iot-backend",
  "version": "2.0.0",
  "description": "IoT Backend with optimized TimescaleDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "node -r dotenv/config scripts/run-migration.js",
    "migrate:status": "psql -h localhost -U postgres -d iot_data -c 'SELECT * FROM table_sizes;'",
    "migrate:rollback": "echo 'Restore from backup: psql -h localhost -U postgres -d iot_data < backups/backup_YYYYMMDD_HHMMSS.sql'"
  },
  "keywords": [
    "iot",
    "fastify",
    "timescaledb",
    "mqtt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-socket.io": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "mqtt": "^5.11.2",
    "pg": "^8.13.1",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
